html {
  font-size: 16px;
}

body {
  font-family: sans-serif;
  margin: 0;
  font-size: 1em;
}

h1, h2, h3, h4, h5 {
  font-family: sans-serif;
}

nav a {
  display: inline-block;
  padding: 10px;
  text-decoration: none;
  color: #333;
}

nav a:hover {
  background: #aaa;
}

header, footer {
  width: 100%;
  background: #eee;
  text-align: center;
}
header {
  border-bottom: 1px solid black;
}

footer {
  border-top: 1px solid black;
  font-size: 2em;
  // position: absolute;
  bottom: 0;
  text-align: center;
}

form {
  overflow: hidden;
  margin-bottom: 1em;
}

label {
  display: block;
  margin: 5px 0px;
}

.next, .undo {
  padding: 0px 13px
}
.next {
  border-left: 1px solid #333;
  float: right;
}

.undo {
  border-right: 1px solid #333;
  float: left;
  width: 30px;
  text-indent: -999em;
  background: no-repeat url('data:image/png;base64,');

}
