@import './shared/mixins.styl';

html {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

*, *:before, *:after {
  -webkit-box-sizing: inherit;
  -moz-box-sizing: inherit;
  box-sizing: inherit;
}

body {
  font-size: 14px;
  font-family: 'Open Sans', sans-serif;
  color: $font-dark-blue
  margin: 0;
}

h1, h2, h3, h4, h5 {
  font-family: 'Open Sans', sans-serif;
}

header, footer {
  text-align: center;
  text-transform: uppercase;
}

form {
  overflow: hidden;
  margin: 0.75em;
}

label {
  display: block;
  margin: 5px 0px;
}

button:focus {
  outline:0;
}

.next, .undo {
  padding: 0px 13px
}
.next {
  border-left: 1px solid #333;
  float: right;
}

.undo {
  border-right: 1px solid #333;
  float: left;
  width: 30px;
  text-indent: -999em;
  background: no-repeat url('data:image/png;base64,');
}

.wrapper {
  margin: auto;
  background-color: $gray-1;
  overflow: auto;
  padding: .75em;
}

@media only screen and (min-width: 33em) { 
  
  .wrapper {
    padding: 3em;
  }
}

.mainContainer {
  position: relative;
  max-width: 500px;
  margin: auto;
}

@media only screen and (min-width: 45em) { 
  
  .mainContainer {
    max-width: 1000px;
    margin: auto;
    padding: 0 .75em;
  }
}