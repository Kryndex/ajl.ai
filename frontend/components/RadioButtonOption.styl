@import './shared/mixins.styl';

.radioButton {
  button();
  margin: .75em;
  display: block;
}

.hidden {
  visually-hidden();
}

@media only screen and (min-width: 26em) {  
  .radioButton {
    margin: 1.25em 1.5em;
  }
}

@media only screen and (min-width: 63em) {  
  .radioButton {
    margin: 1.5em 2.5em;
  }
}