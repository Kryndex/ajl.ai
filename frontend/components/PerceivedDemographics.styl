@import './App.styl';
@import './shared/mixins.styl';

.imageContainer {
  position: relative;
  padding: 0.75em 0.75em 3.6em;
  border: 1px solid $gray-2;
  background-color: white;

  .progressBarContainer {
    margin-bottom: .75em;
  }
}

.questionsContainer {
  position: relative;
  margin-top: -52px;

  h4.PerceivedDemographicTitle {
    text-transform: uppercase;
    font-weight: 700;
    padding: .75em 0;
    margin: 0 0 1em;
    text-align: center;
    border-bottom: 1px solid $gray-2;
  }
}

fieldset, .reviewAnnotations {
  background: white;
  border: 1px solid $gray-2;
  padding: 0 0 .25em;
  margin: 0;
}

.reviewAnnotations {

  ul {
    list-style: none;
    padding: 0 1em 1em;
    margin: 0;
    line-height: 2em;
  }
}

.toggleFlag {
  position: absolute;
  right: 2em;
  background: transparent;
  border: 0;

  &:hover {
    text-decoration: underline;
  }
}

.skipFlagButton, .flagButton {
  button-aqua();
  margin: 1.25em auto;
  display: block;
  width: 75%;
}

.flagButton {
  background-color: #db706b;
}

.flagButton:hover, .flagButton:focus {
  background-color: #db706b;
}


@media only screen and (max-width: 955px) {
  .skipFlagButton, .flagButton {
    width: 90%;
  }
}

@media only screen and (max-width: 780px) {
  .skipFlagButton, .flagButton {
    font-size: .9em;
  }
}

@media only screen and (max-width: 720px) {
  .skipFlagButton, .flagButton {
    font-size: 1em;
  }
}

.prev,
.save {
  font-family: 'Open Sans', sans-serif;
  border: none;
  font-size: 1em;
  font-weight: 600;
}

.prev {
  position: absolute;
  background-color: $light-blue;
  color: $font-dark-blue;
  margin: 0;
  height: 42px;
  padding: 0 1em;

  &:hover {
    background-color: $medium-blue;
  }
}

.save {
  button-aqua()
  margin: 1em auto;
  width: 90%;
  display: block;
}

.hidden {
  visually-hidden();
}

.rangeSlider {
  position: relative;
  margin-top: 1em;
  padding: 1em;
  text-align: center;

  .rangeSliderValueBold {
    font-weight: 700;
  }

  .rangeSliderValue {
    margin-bottom: 1em;
    text-transform: uppercase;
    min-height: 1.4em;
  }

  .rangeSliderLines {
    width: 105%;
    margin: .5em 0 0 2.5%;
    height: .5em;
    background: repeating-linear-gradient(
      to right,
      #cacaca,
      #cacaca 1px,
      white 1px,
      white 10%
    );
  }

  .rangeSliderValueLabels {
    font-size: .9em;
    font-weight: 400;
    color: #989898;

    span {
      display: inline-block;
      width: 33.333333%;
    }
    .rangeSliderFirstValue {
      text-align: left;
    }
    .rangeSliderMiddleValue {
      text-align: center;
    }
    .rangeSliderLastValue {
      text-align: right;
    }
  }

  input[type=range] {
    -webkit-appearance: none;
    margin: 1.5em 0 1em;
    width: 100%;
  }

  input[type=range]:focus {
    outline: none;
  }

  input[type=range]::-webkit-slider-runnable-track {
    very-rounded();
    height: .5em;
    width: 100%;
    cursor: pointer;
    animate: 0.2s;
    background: $gray-2;
  }

  input[type=range]::-webkit-slider-thumb {
    position: relative;
    height: 2em;
    width: 2em;
    border-radius: 1em;
    background: $aqua;
    cursor: pointer;
    -webkit-appearance: none;
    margin-top: -.75em;
    box-shadow: 0 1px 3px rgba(0,0,0,.5);

    &:after {
      content: ' ';
      position: absolute;
      height: 1em;
      width: 1em;
      background-color: white;
    }
  }

  .nextButton {
    button();
    background: $aqua;
    border: 0;
    width: 100%;
    color: white;
    font-size: 1em;
    margin-top: 1em;
    text-transform: uppercase;

    &:hover {
      background: $aqua;
    }
  }
}

.reviewAnnotations p {
  padding: .3em;
  margin: 0px;
  text-align: center;
}

@media only screen and (min-width: 26em) {

  fieldset .progressBarContainer {
    padding: 0 1.5em;
  }
  .reviewAnnotations ul {
    padding: .5em 1.5em 1em 1.5em;
  }

  .rangeSlider {
    padding: 1em 1.5em;
  }
}

@media only screen and (min-width: 45em) {

  .imageContainer{
    padding-bottom: .75em;
  }

  .imageContainer, .questionsContainer {
    width: 50%;
    display: inline-block;
    vertical-align: top;
  }

  .questionsContainer {
    margin-top: 0;

    form {
      margin-top: 0;
    }
  }
}

@media only screen and (min-width: 63em) {

  fieldset .progressBarContainer {
    padding: 0 2.5em;
  }

  .reviewAnnotations ul {
    padding: 1.5em 2.5em 1.5em 2.5em;
  }

  .rangeSlider {
    padding: 1em 2.5em 2em;
  }
}
