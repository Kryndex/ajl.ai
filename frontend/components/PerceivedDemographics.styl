@import './App.styl';
@import './shared/mixins.styl';

.imageContainer {
  position: relative;
  padding: 0.75em 0.75em 3.6em;
  border: 1px solid $gray-2;
  background-color: white;

  .progressBarContainer {
    margin-bottom: .75em;
  }
}

.questionsContainer {
  position: relative;
  margin-top: -52px;

  h4.PerceivedDemographicTitle {
    text-transform: uppercase;
    font-weight: 700;
    padding: .75em 0;
    margin: 0 0 1em;
    text-align: center;
    border-bottom: 1px solid $gray-2;
  }
}

fieldset, .reviewAnnotations {
  background: white;
  border: 1px solid $gray-2;
  padding: 0 0 .25em;
  margin: 0;
  
  .progressBarContainer {
    padding: 0 1em;
  }
  .demographicLabels span {
    width: 33.33%;
    text-align: center;
    display: inline-block;
  }
}

.reviewAnnotations {
  
  ul {
    list-style: none;
    padding: 0 1em 1em;
    margin: 0;
    line-height: 2em;
  }
}

.prev,
.save {
  font-family: 'Open Sans', sans-serif;
  border: none;
  font-size: 1em;
  font-weight: 600;
}

.prev {
  position: absolute;
  background-color: $light-blue;
  color: $font-dark-blue;
  margin: 0;
  height: 42px;
  padding: 0 1em;
  
  &:hover {
    background-color: $medium-blue;
  }
}

.save {
  button-aqua()
  margin: 0 1em 1em;
}

.hidden {
  visually-hidden();
}

@media only screen and (min-width: 26em) { 
   
  fieldset .progressBarContainer {
    padding: 0 1.5em;
  }
  
  .reviewAnnotations ul {
    padding: .5em 1.5em 1em 1.5em;
  }
  
  .save {
    margin: 0 1.5em 1.5em;
  }
}

@media only screen and (min-width: 45em) { 
  
  .imageContainer{
    padding-bottom: .75em;
  }
  
  .imageContainer, .questionsContainer {
    width: 50%;
    display: inline-block;
    vertical-align: top;
  }
  
  .questionsContainer {
    margin-top: 0;
    
    form {
      margin-top: 0;
    }
  }
}

@media only screen and (min-width: 63em) {  
  
  fieldset .progressBarContainer {
    padding: 0 2.5em;
  }
  
  .reviewAnnotations ul {
    padding: 1.5em 2.5em 1.5em 2.5em;
  }
  
  .save {
    margin: 0 2.5em 2.5em;
  }
}
