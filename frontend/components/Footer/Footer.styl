@import '../shared/mixins.styl';

footer {
  padding: 2em 0;
  width: 100%;
  background: $nav-footer;
  text-align: center;

  button, a {
    button()
    display: inline-block;
    text-decoration: none;
    padding: 0 2em;
    color: $font-dark-blue;
    border: 0;
    text-transform: uppercase;
    font-size: 1em;
    margin: 0 .2em;
  }
}
