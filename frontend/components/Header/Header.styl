@import '../shared/mixins.styl';

.nav {
  max-width: 500px;
  margin: auto;
}

.nav a {
  display: inline-block;
  padding: 1em;
  text-decoration: none;
  color: $light-blue;
  width: 50%;
  font-weight: 300;
  letter-spacing: 1px;
  font-size: .9em;
}

.nav a:hover {
  color: white;
  box-shadow: inset 0 -3px 0 $aqua;
}

.header, footer {
  width: 100%;
  background: $nav-footer;
  text-align: center;
}

@media only screen and (min-width: 33em) {  
  .nav {
    text-align: left;
  }
  
  .nav a {
    width: inherit;
    padding: 2em 1em;
  }
}

@media only screen and (min-width: 45em) {  
  .nav {
    max-width: 1080px;
    padding: 0 3em;
  }
}
